%h2
  =:logged_in.l
  = link_to @user.login, dashboard_user_path(@user), :id => 'user-menu'
#user-menu-tip
  %ul
    -if @user.admin?
      %li=link_to :admin_dashboard.l, admin_dashboard_path
    %li= link_to :edit_profile.l, edit_user_path(@user) 
    %li= link_to :edit_account.l, edit_account_user_path(@user)          
    %li= link_to :manage_posts.l, manage_user_posts_path(@user)
    %li= link_to :inbox.l, user_messages_path(@user)          

  %hr
  %ul
    %li= link_to :my_profile.l, user_path(@user)                    
    %li=link_to :my_blog.l, user_posts_path(@user)
    %li=link_to :photo_manager.l, user_photo_manager_index_path(@user)
    %li=link_to :my_clippings.l, user_clippings_path(@user)
    %li=link_to :my_friends.l, accepted_user_friendships_path(@user)        
  %hr
  =link_to :log_out.l, logout_path

%script{:type => "text/javascript"}
  :plain
    new Tip('user-menu', $('user-menu-tip'), {
      hook:{target: 'bottomRight', tip: 'topRight'},
      hideOn: false, 
      hideAfter: 1.5,  
      className: 'silver',
      offset: {y:2, x:12}
      });
